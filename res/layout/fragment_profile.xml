<?xml version="1.0" encoding="utf-8"?>
 <!-- 档案布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_common"
    android:orientation="vertical" >

    <include layout="@layout/actionbar_profile" />

    <include layout="@layout/common_divide_whole" />

    <RelativeLayout
        android:id="@+id/layoutName"
        style="@style/profile_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height" >

        <TextView
            style="@style/list_label_common"
            android:layout_centerVertical="true"
            android:text="@string/name" />

        <TextView
            android:id="@+id/name"
            style="@style/profile_right_text"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/arrow_right_width" />
    </RelativeLayout>

    <include layout="@layout/common_divide" />

    <RelativeLayout
        android:id="@+id/layoutSex"
        style="@style/profile_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:orientation="horizontal" >

        <TextView
            style="@style/list_label_common"
            android:layout_centerVertical="true"
            android:text="@string/sex" />

        <TextView
            android:id="@+id/sex"
            style="@style/profile_right_text"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/arrow_right_width" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_group_divide_height" />

    <include layout="@layout/common_divide_whole" />

    <RelativeLayout
        android:id="@+id/layoutBirthday"
        style="@style/profile_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:orientation="horizontal" >

        <TextView
            style="@style/list_label_common"
            android:layout_centerVertical="true"
            android:text="@string/birthday" />

        <TextView
            android:id="@+id/birthday"
            style="@style/profile_right_text"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/arrow_right_width" />
    </RelativeLayout>

    <include layout="@layout/common_divide" />

    <RelativeLayout
        android:id="@+id/layoutBirthTime"
        style="@style/profile_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:orientation="horizontal" >

        <TextView
            style="@style/list_label_common"
            android:layout_centerVertical="true"
            android:text="@string/birthtime" />

        <TextView
            android:id="@+id/birthTime"
            style="@style/profile_right_text"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/arrow_right_width" />
    </RelativeLayout>

    <include layout="@layout/common_divide" />

    <RelativeLayout
        android:id="@+id/layoutBirthWeight"
        style="@style/profile_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:orientation="horizontal" >

        <TextView
            style="@style/list_label_common"
            android:layout_centerVertical="true"
            android:text="@string/birthWeight" />

        <TextView
            android:id="@+id/birthWeight"
            style="@style/profile_right_text"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/arrow_right_width" />
    </RelativeLayout>

    <include layout="@layout/common_divide_whole" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_group_divide_height" />

    <TextView
        style="@style/list_label_common"
        android:text="@string/note" />

    <include layout="@layout/common_divide_whole" />

    <LinearLayout
        style="@style/profile_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/no_border"
            android:gravity="top"
            android:lines="5"
            android:paddingLeft="3dp" />
    </LinearLayout>

    <include layout="@layout/common_divide_whole" />

</LinearLayout>